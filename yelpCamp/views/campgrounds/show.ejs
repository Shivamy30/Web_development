<% layout('layouts/boiler') %> 


<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <img src="<%= camp.image %> " class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.discription %> </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= camp.location %> </li>
        <li class="list-group-item">$<%= camp.price %>/night</li>
      </ul>
      <div class="card-body">
        <a href="/campgrounds" class="card-link btn btn-info">All CampGrounds</a>
        <a href="/campgrounds/<%= camp._id %>/edit" class="card-link btn btn-warning">Edit CampGround</a>
        <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
         <button class=" ml-2 card-link btn btn-danger">Delete CampGround</button> </span>
        </form>
      </div>
      <h2>leave your review</h2>
      <form action="/campgrounds/<%= camp._id %>/reviews" method="POST" class="mb-3 validate-form" novalidate>
        <div class="mb-3">
          <label class="form-label" for="range">rating</label>
          <input class="form-range" type="range" name="review[rating]" id="range" min="0" max="5">
        </div>
        <div class="mb-3">
          <label class="form-label" for="review">Review</label>
          <textarea class="form-control" name="review[body]" id="review" cols="30" rows="3" required></textarea>
          <div class="valid-feedback">
            looks good!!
        </div>
        </div>
        <div class="">
          <button class="btn btn-success">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

  