<% layout('layouts/boiler') %> 
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Create New</a>
    <ul>
        <% for(let camp of campGrounds) { %>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= camp.image %> " alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-text"><%= camp.title %> </h5>
                        <p class="card-text"><%= camp.discription %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %> </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %> </a>
                    </div>

                </div>
            </div>
            
        <% } %>  
    </ul>
    <footer>
        <a href="/campgrounds/new">Create New</a>
    </footer>
